<Page x:Class="DVD.Pages.QRPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DVD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QRPage">

    <Grid>
        <StackPanel>
            <Button x:Name="QrCode" Content="Create QR" Click="QrCode_Click"/>
        </StackPanel>
        <StackPanel>
            <Image x:Name="Qr" Width="400" Height="200"/>
            <StackPanel>
                <TextBlock Text="АБИБОС" HorizontalAlignment="Center" ></TextBlock>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
